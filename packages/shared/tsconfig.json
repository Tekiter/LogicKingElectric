{
    "compilerOptions": {
      "lib": ["esnext"],
      "target": "ES6", 
      "module": "commonjs", 
      "moduleResolution": "node", 
      "outDir": "dist", 
      "rootDir": "src",
      "strict": true, 
      "emitDecoratorMetadata": true, 
      "experimentalDecorators": true, 
      "sourceMap": true, 
      "composite": true,
      // "esModuleInterop": true,
      "skipLibCheck": true, 
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true
    },
    "include": [
      "src",
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts",
    ]
  }